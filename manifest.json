{
    "manifest_version": 2,
    "author": "doncato",
    "name": "__MSG_extensionName__",
    "version": "1.0",
    "default_locale": "en",
    "homepage_url": "https://github.com/doncato/youtube-embed-watcher",
    "description": "__MSG_extensionDescription__",
    "icons": {
        "48": "icons/yt-ew-48.png",
        "96": "icons/yt-ew-96.png"
    },

    "page_action": {
        "default_icon": "icons/yt-ew-32.png",
        "default_title": "__MSG_contextMenuEmbed__",
        "show_matches": ["*://*.youtube.com/*"],
        "hide_matches": ["*://*.youtube.com/embed/*"]
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus"
    ]
}
